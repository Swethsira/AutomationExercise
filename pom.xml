pipeline {
    agent any

    tools {
        jdk 'Java11'
        maven 'maven'
    }

    stages {
        stage('Checkout') {
            steps {
                echo 'Cloning repository with credentials...'
                git branch: 'main',
                    url: 'https://github.com/Swethsira/AutomationExercise.git',
                    credentialsId: 'AutomationExercise'
            }
        }

        stage('Build & Test') {
            steps {
                echo 'Building project and running tests...'
                bat 'mvn clean install'
            }
        }

        stage('Push Changes') {
            steps {
                echo 'Pushing local changes to GitHub...'
                withCredentials([usernamePassword(credentialsId: 'AutomationExercise', usernameVariable: 'GIT_USER', passwordVariable: 'GIT_TOKEN')]) {
                    bat """
                        "C:\\Program Files\\Git\\bin\\git.exe" config user.email "%GIT_USER%@users.noreply.github.com"
                        "C:\\Program Files\\Git\\bin\\git.exe" config user.name "%GIT_USER%"

                        "C:\\Program Files\\Git\\bin\\git.exe" add .
                        "C:\\Program Files\\Git\\bin\\git.exe" commit -m "Automated commit from Jenkins" || echo "No changes to commit"

                        "C:\\Program Files\\Git\\bin\\git.exe" push https://%GIT_USER%:%GIT_TOKEN%@github.com/Swethsira/AutomationExercise.git HEAD:main
                    """
                }
            }
        }
    }

    post {
        always {
            echo 'Pipeline finished, Push Changes stage already executed regardless of test results.'
        }
    }
}
